<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetDailyCaloricNeedActivity" >

    <TextView
        android:id="@+id/total_calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert_data"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/insert_weight_edittext"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:hint="@string/insert_weight"
        android:inputType="number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/insert_height_edittext"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:hint="@string/insert_height"
        android:inputType="number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/insert_age_edittext"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:hint="@string/insert_age"
        android:inputType="number"
        android:textSize="12sp" />

    <RadioGroup android:id="@+id/gender_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_gender"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:textIsSelectable="true" />
        
        <RadioButton
	        android:id="@+id/radio_male"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/male"
	        android:textIsSelectable="true" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/activity_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_sedentary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sedentary"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_lightly_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lightly_active"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_moderately_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moderately_active"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_very_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/very_active"
            android:textIsSelectable="true" />

        <RadioButton
            android:id="@+id/radio_extra_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_active"
            android:textIsSelectable="true" />
    </RadioGroup>

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="computeDailyCaloricNeeds"
         android:text="@string/save" />

</LinearLayout>